<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Session 1"/>
                <com.anychart.AnyChartView
                    android:id="@+id/activity_profile_waterfall_chart_view"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_margin="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Session 2"/>
                <com.anychart.AnyChartView
                    android:id="@+id/activity_profile_waterfall_chart_view1"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_margin="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Session 3"/>
                <com.anychart.AnyChartView
                    android:id="@+id/activity_profile_waterfall_chart_view2"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_margin="20dp"
                    />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>