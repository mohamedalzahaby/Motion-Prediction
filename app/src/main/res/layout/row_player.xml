<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    android:padding="8dp"
    android:background="@drawable/row_shape"
    android:id="@+id/container_player_row">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/thumbnail_ExpertPalmsAdapter"
        android:src="@drawable/default_player_profile_black_icon"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/row_playerName"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtOptionDigit"
                android:textColor="#fff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="&#8942;"
                android:gravity="right"
                android:textAppearance="?android:textAppearanceLarge" />
        </LinearLayout>

        <!--<TextView
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Palm Type"
            android:id="@+id/row_usertype"/>

        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginTop="5dp"
            android:id="@+id/row_usergender"/>-->

    </LinearLayout>
</LinearLayout>



